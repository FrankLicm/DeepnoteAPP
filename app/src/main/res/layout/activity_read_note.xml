<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/ladies"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/notetitle"
                    android:layout_margin="5dp"
                    android:text="那个人"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/praisenum"
                android:textSize="8sp"
                android:text="点赞数:30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentnum"
                android:layout_marginLeft="5dp"
                android:textSize="8sp"
                android:text="评论数:30"/>
                </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/writer"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:text="阿尔法"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prilabel"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:shadowColor="@color/grey1"
                android:text="追风筝的人"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000/10/10"
                android:id="@+id/notetime"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="感受:"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notefeel"
            android:textSize="18dp"
            android:text="为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为遍"/>
       </ScrollView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="引用的原文:"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noterefer"
            android:textSize="18dp"
            android:text="为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为你千千万万遍为遍"/>
    </ScrollView>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:id="@+id/buttonlayout"
        android:gravity="right">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/charitycolor"
            android:id="@+id/collectButton" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumbred"
            android:id="@+id/praiseButton" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bubble"
            android:id="@+id/commentButton" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="评论"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="917dp"
        android:id="@+id/commentListview">
    </ListView>
</LinearLayout>
</ScrollView>